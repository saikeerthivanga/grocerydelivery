@page
@model BingoWebApp.Views.Shared._headerModel
@{
}
<nav class="navbar">
    <div class="logo">
        <h1>Bingo</h1>
    </div>
    <div class="search-bar">
        <input type="text" placeholder="Search for groceries...">
        <button class="search-button">Search</button>
    </div>
    <div class="user-actions">
        <button class="cart-button">My Cart</button>
        @if(ViewBag.Flag==true)
        {
        <button class="login-button" onclick="location.href='@Url.Action("LogOut", "Home")'">Log out</button>
        }
        else
        {
        <button class="login-button" onclick="location.href='@Url.Action("Login", "User")'">Login</button>
        }
    </div>
</nav>
